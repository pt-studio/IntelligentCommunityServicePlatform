        </div>
    </div>
</div>
<script>
    var app = new Vue({
        el: '#appEntry',
        data: {
            records: [],
        },
        created() {
            let recordsHolder = this.records;
            axios.get('/api/organizations/')
            .then(function (response) {
                for (let i = 0; i < response.data.length; i++) {
                    recordsHolder.push(response.data[i]);
                }
